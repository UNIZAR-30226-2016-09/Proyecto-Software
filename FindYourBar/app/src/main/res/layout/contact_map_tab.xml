<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/bar_direccion_titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:paddingLeft="10dp"
                android:paddingTop="20dp"
                android:text="@string/bar_direccion"
                android:textAllCaps="true"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/actionbar_background"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bar_direccion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="fill_horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp" />

            <TextView
                android:id="@+id/bar_contacto_titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:paddingLeft="10dp"
                android:paddingTop="20dp"
                android:text="@string/bar_contacto"
                android:textAllCaps="true"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/actionbar_background"
                android:textStyle="bold" />

            <Button
                android:id="@+id/bar_telefono"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_call_white_24dp"
                android:drawablePadding="8dp"
                android:gravity="fill_horizontal"
                android:onClick="onClick"
                android:paddingBottom="15dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="@string/bar_telefono" />

            <Button
                android:id="@+id/bar_email"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_email_white_24dp"
                android:drawablePadding="8dp"
                android:gravity="fill_horizontal"
                android:onClick="onClick"
                android:paddingBottom="15dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="@string/bar_email" />

            <Button
                android:id="@+id/bar_facebook"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_facebook_box_white_24dp"
                android:drawablePadding="8dp"
                android:gravity="fill_horizontal"
                android:onClick="onClick"
                android:paddingBottom="15dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="@string/bar_facebook" />

            <Button
                android:id="@+id/mapaSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:background="@color/actionbar_background"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_map_white_24dp"
                android:drawablePadding="16dp"
                android:onClick="onClick"
                android:padding="16dp"
                android:text="@string/bar_mapa"
                android:textSize="20dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>